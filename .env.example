# Backend Configuration
PORT=5000

# Stripe Configuration (for production)
# Sign up at https://stripe.com to get these keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Plaid Configuration (for ACH verification)
# Sign up at https://plaid.com to get these keys
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox

# PayPal Configuration
# Sign up at https://developer.paypal.com to get these keys
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Database Configuration (when ready to add database)
# DATABASE_URL=mongodb://localhost:27017/salon_rent
# or
# DATABASE_URL=postgresql://user:password@localhost:5432/salon_rent

# JWT Secret (for authentication when implemented)
# JWT_SECRET=your_random_secret_key_here

# Application Settings
NODE_ENV=development
